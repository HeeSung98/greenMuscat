<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
    <link rel="stylesheet" href="room.css" />
    <style>
      body {
        display: flex;
        flex-direction: column;
        justify-content: center;
      }
      .main {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 70%;
        margin: auto;
      }
    </style>
  </head>
  <%- include('header') %>
  <body>
    <div class="main">
      <div style="height: 300px">
        <h1>커다란 포도 들어갈 위치</h1>
      </div>
      <div class="notice">
        <div>공지사항</div>
        <form name="noticeForm">
          <div>
            <input
              type="text"
              id="rNo"
              class="noticeInput"
              placeholder="방넘버 작성해주세요(나중에 삭제)"
            />
          </div>
          <div class="noticeDiv">
            <div>:)</div>
            <div class="noticeInputDiv">
              <textarea
                id="notice"
                class="noticeInput"
                placeholder="공지사항을 작셍해주세요"
              ></textarea>
            </div>
            <button
              type="button"
              onclick="noticeRegister()"
              class="registerBtn"
            >
              게시
            </button>
          </div>
          <hr />
        </form>
      </div>
      <div class="noticeContent"><%= data %></div>
    </div>
  </body>

  <script>
    //textarea 자동 높이 조절
    const DEFAULT_HEIGHT = 5 // textarea 기본 height
    const $textarea = document.querySelector('#notice')
    $textarea.oninput = (event) => {
      const $target = event.target
      $target.style.height = 0
      $target.style.height = DEFAULT_HEIGHT + $target.scrollHeight + 'px'
    }
    // 공지사항 등록하기
    async function noticeRegister() {
      const form = document.forms['noticeForm']
      const data = {
        rNo: form.rNo.value,
        notice: form.notice.value,
      }
      const respone = await axios({
        method: 'PATCH',
        url: '/room/notice',
        data,
      })
      if (respone) {
        console.log('새로운 공지사항 등록 성공')
        document.location.reload()
      } else {
        console.log('err')
      }
    }
  </script>
</html>
