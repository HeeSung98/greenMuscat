<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
      .modal {
        position: absolute;
        display: none;

        justify-content: center;
        top: 0;
        left: 0;

        width: 100%;
        height: 100%;

        background-color: rgba(0, 0, 0, 0.4);
      }

      .modal_body {
        position: absolute;
        top: 50%;

        width: 400px;
        height: 600px;

        padding: 40px;

        text-align: center;

        background-color: rgb(255, 255, 255);
        border-radius: 10px;
        box-shadow: 0 2px 3px 0 rgba(34, 36, 38, 0.15);

        transform: translateY(-50%);
      }

      .btnRoomAdd {
        width: 100px;
        height: 100px;
        background-color: antiquewhite;
        text-align: center;
        border-style: solid;
        border-width: 3px;
      }
    </style>
    <title>방 선택하기</title>
  </head>

  <body>
    <h2></h2>

    <div class="modal">
      <div class="modal_body">
        <h2>새로운 방 생성</h2>
        <form name="roomAddForm">
          <label for="email">이메일: </label>
          <input type="text" id="email" name="email" /><br />
          <label for="roomTitle">방 이름: </label>
          <input type="text" id="roomTitle" name="roomTitle" /><br />
          <label for="roomCode">입장 코드: </label>
          <input type="text" id="roomCode" name="roomCode" /><br />
          <button type="button" onclick="btnRoomRegister()">생성</button>
          <button type="button" onclick="btnCloseModal()">닫기</button>
        </form>
      </div>
    </div>
    <div class="result"></div>
    <div class="btnRoomAdd" onclick="btnOpenModal()">방 생성하기</div>

    <script>
      // const nick = localStorage.getItem('nickname')
      // const h3 = document.querySelector('h3')
      // h3.innerText = nick + '님 방을 선택해주세요'

      // 방 생성 모달창
      const modal = document.querySelector('.modal')

      // 모달창 열기
      function btnOpenModal() {
        modal.style.display = 'flex'
      }

      // 모달창 닫기
      function btnCloseModal() {
        modal.style.display = 'none'
      }

      // 방 생성 폼 데이터
      const resultBox = document.querySelector('.result')
      async function btnRoomRegister() {
        const form = document.forms['roomAddForm']
        const data = {
          rTitle: form.roomTitle.value,
          code: form.roomCode.value,
          email: form.email.value,
        }

        const respone = await axios({
          method: 'POST',
          url: '/main/add',
          data,
        })

        resData = respone.data
        console.log('resData: ', resData)
        if (resData.result) {
          alert(`${resData.message}`)
          form.reset()
          btnCloseModal()
        } else {
          alert(`${resData.message}`)
          form.reset()
        }
      }
    </script>
  </body>
</html>
